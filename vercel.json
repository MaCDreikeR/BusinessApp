{
  "buildCommand": "npx expo export --platform web",
  "outputDirectory": "dist",
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)\\.ttf",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" },
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    },
    {
      "source": "/",
      "headers": [
        { "key": "Link", "value": "</manifest.json>; rel=manifest" }
      ]
    },
    {
      "source": "/(.*)\\.html",
      "headers": [
        { "key": "Link", "value": "</manifest.json>; rel=manifest" }
      ]
    }
  ]
}
